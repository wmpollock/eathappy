  <ingredients>
    <ingredient>
      <quantity>3 lbs</quantity>
      <ingredient_name>English cut short ribs</ingredient_name>
      <preparation>cut in serving pieces</preparation>
    </ingredient>
    <ingredient>
      <quantity>2 Tbsp</quantity>
      <ingredient_name>hot mustard</ingredient_name>
      <preparation></preparation>
    </ingredient>
    <ingredient>
      <quantity>3 tsp</quantity>
      <ingredient_name>salt</ingredient_name>
