    </ingredient>
    <ingredient>
      <quantity></quantity>
      <ingredient_name>black pepper</ingredient_name>
      <preparation></preparation>
    </ingredient>
    <ingredient>
      <quantity>1/2 tsp</quantity>
      <ingredient_name>chili powder</ingredient_name>
