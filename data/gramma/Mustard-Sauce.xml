<recipe>
  <name>Mustard Sauce</name>
  <ingredients>
    <ingredient>
      <quantity>1 cup</quantity>
      <ingredient_name>sour cream</ingredient_name>
      <preparation></preparation>
    </ingredient>
    <ingredient>
      <quantity>1 Tbsp</quantity>
      <ingredient_name>mustard</ingredient_name>
      <preparation></preparation>
    </ingredient>
    <ingredient>
      <quantity>1 Tbsp</quantity>
      <ingredient_name>minced onion</ingredient_name>
      <preparation></preparation>
    </ingredient>
    <ingredient>
      <quantity>1/4 tsp</quantity>
      <ingredient_name>salt</ingredient_name>
      <preparation></preparation>
    </ingredient>
    <ingredient>
      <quantity>1/8 tsp</quantity>
      <ingredient_name>pepper</ingredient_name>
      <preparation></preparation>
    </ingredient>
    <ingredient>
      <quantity>1 Tbsp</quantity>
      <ingredient_name>chopped green onions</ingredient_name>
      <preparation></preparation>
    </ingredient>
  </ingredients>
  <preparation>Heat sour cream, mustard, minced onion, salt and pepper over low heat, stirring.  Sprinkle with chopped green onions.</preparation>
