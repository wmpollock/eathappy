      <ingredient_name>low-fat Greek yogurt</ingredient_name>
      <preparation></preparation>
    </ingredient>
    <ingredient>
      <quantity>1</quantity>
      <ingredient_name>large egg</ingredient_name>
      <preparation></preparation>
