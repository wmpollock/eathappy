<recipe>
  <name>Eggs Benedict light</name>
  <safe_name>Eggs_Benedict_light</safe_name>
  <yield_count>2</yield_count>
  <yield_measure>servings</yield_measure>
  <notes>For how to poach eggs, search sunset.com for "perfect poached eggs"</notes>
  <prep_time>15 min</prep_time>
  <ingredients>
    <ingredient>
      <quantity>4</quantity>
      <ingredient_name>large eggs</ingredient_name>
      <preparation>poached</preparation>
    </ingredient>
    <ingredient>
      <quantity>4</quantity>
      <ingredient_name>thin slices Canadian bacon</ingredient_name>
      <preparation>browned</preparation>
    </ingredient>
    <ingredient>
      <quantity>2</quantity>
      <ingredient_name>whole-wheat English muffins</ingredient_name>
      <preparation>split and toasted</preparation>
    </ingredient>
    <ingredient>
      <quantity></quantity>
      <ingredient_name>SAUCE</ingredient_name>
      <preparation></preparation>
    </ingredient>
