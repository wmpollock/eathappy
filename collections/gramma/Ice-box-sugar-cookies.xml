<recipe>
  <name>Ice-box sugar cookies</name>
  <ingredients>
    <ingredient>
      <quantity>1 cup</quantity>
      <ingredient_name>shortening</ingredient_name>
      <preparation></preparation>
    </ingredient>
    <ingredient>
      <quantity>2 cups</quantity>
      <ingredient_name>sugar</ingredient_name>
      <preparation></preparation>
    </ingredient>
    <ingredient>
      <quantity>3</quantity>
      <ingredient_name>eggs</ingredient_name>
      <preparation></preparation>
    </ingredient>
    <ingredient>
      <quantity>4 1/2 cups</quantity>
      <ingredient_name>flour</ingredient_name>
      <preparation></preparation>
    </ingredient>
    <ingredient>
      <quantity>1 tsp</quantity>
      <ingredient_name>soda</ingredient_name>
      <preparation></preparation>
    </ingredient>
    <ingredient>
      <quantity>1 tsp</quantity>
      <ingredient_name>cream of tartar</ingredient_name>
      <preparation></preparation>
    </ingredient>
    <ingredient>
      <quantity>1 1/2 tsp</quantity>
      <ingredient_name>nutmeg</ingredient_name>
      <preparation></preparation>
    </ingredient>
    <ingredient>
      <quantity>1/2 tsp</quantity>
      <ingredient_name>salt</ingredient_name>
      <preparation></preparation>
    </ingredient>
    <ingredient>
      <quantity>1 tsp</quantity>
      <ingredient_name>vanilla</ingredient_name>
      <preparation></preparation>
    </ingredient>
    <ingredient>
      <quantity>1 tsp</quantity>
      <ingredient_name>lemon</ingredient_name>
      <preparation></preparation>
    </ingredient>
    <ingredient>
      <quantity>4 tsp</quantity>
      <ingredient_name>cream  (undiluted can milk)</ingredient_name>
      <preparation></preparation>
    </ingredient>
  </ingredients>
  <preparation>Cream shortening, add sugar.  Add eggs and beat three minutes.  Add rest of ingredients and mix well.  Shape into two rolls.  Chill 24 hours.  Cut thin and bake.</preparation>
