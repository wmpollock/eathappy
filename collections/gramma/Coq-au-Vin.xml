      <quantity>6 slices</quantity>
      <ingredient_name>bacon</ingredient_name>
      <preparation></preparation>
    </ingredient>
    <ingredient>
      <quantity>5</quantity>
      <ingredient_name>small onions</ingredient_name>
      <preparation></preparation>
    </ingredient>
    <ingredient>
      <quantity>4-6</quantity>
      <ingredient_name>carrots</ingredient_name>
