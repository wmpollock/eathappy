<recipe>
  <name>Coq Au Vin</name>
  <yield_count>6-8</yield_count>
  <yield_measure>servings</yield_measure>
  <ingredients>
    <ingredient>
      <quantity>3-3 1/2 lb</quantity>
      <ingredient_name>chicken</ingredient_name>
      <preparation></preparation>
    </ingredient>
