<recipe>
	<name>Orange Sauce</name>
	<notes>"Over cake or pudding"</notes>
	<ingredients>
		<ingredient>
			<quantity>3/4 cup</quantity>
			<ingredient_name>sugar</ingredient_name>
			<preparation></preparation>
		</ingredient>
		<ingredient>
			<quantity>3 Tbsp</quantity>
			<ingredient_name>corn starch</ingredient_name>
			<preparation></preparation>
		</ingredient>
		<ingredient>
			<quantity>1 1/2 cup</quantity>
			<ingredient_name>boiling water</ingredient_name>
			<preparation></preparation>
		</ingredient>
		<ingredient>
			<quantity>1/4 tsp</quantity>
			<ingredient_name>salt</ingredient_name>
			<preparation></preparation>
		</ingredient>
		<ingredient>
			<quantity>4 Tbsp</quantity>
			<ingredient_name>Margarine</ingredient_name>
			<preparation></preparation>
		</ingredient>
		<ingredient>
			<quantity>1 Tbsp</quantity>
			<ingredient_name>grated orange rind</ingredient_name>
			<preparation></preparation>
		</ingredient>
		<ingredient>
			<quantity>1/2 cup</quantity>
			<ingredient_name>orange juice</ingredient_name>
			<preparation></preparation>
		</ingredient>
		<ingredient>
			<quantity>2 Tbsp</quantity>
			<ingredient_name>lemon juice</ingredient_name>
			<preparation></preparation>
		</ingredient>
	</ingredients>
	<preparation>Mix together dry ingredients and orange rind.  Add water gradually.  Cook 5 minutes over low heat.  Serve hot or cold.</preparation>
