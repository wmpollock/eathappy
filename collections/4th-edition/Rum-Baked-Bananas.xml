<recipe>
	<name>Rum-Baked Bananas</name>
	<ingredients>
		<ingredient>
			<quantity>4</quantity>
			<ingredient_name>bananas</ingredient_name>
			<preparation></preparation>
		</ingredient>
		<ingredient>
			<quantity>1</quantity>
			<ingredient_name>orange</ingredient_name>
			<preparation>juiced and rind grated</preparation>
		</ingredient>
		<ingredient>
			<quantity>2 Tbl</quantity>
