      <quantity>2 Tbl</quantity>
      <ingredient_name>rice wine vinegar</ingredient_name>
      <preparation></preparation>
    </ingredient>
    <ingredient>
      <quantity>2 Tbl</quantity>
      <ingredient_name>water</ingredient_name>
      <preparation></preparation>
    </ingredient>
    <ingredient>
      <quantity>1 Tbl</quantity>
      <ingredient_name>fresh ginger</ingredient_name>
      <preparation>chopped</preparation>
    </ingredient>
    <ingredient>
