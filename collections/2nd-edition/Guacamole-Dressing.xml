  <prep_time></prep_time>
  <name>Guacamole Dressing</name>
  <secondary_categories>
    <secondary_categorie>**New05</secondary_categorie>
  </secondary_categories>
  <source_date></source_date>
  <source_name>From "Sharing Our Favorites: the Dana Guild, Senshin Buddhist Church, Los Angeles, CA" -- Lily Domoto</source_name>
  <notes>Mmmmm.  Guacamole.</notes>
  <ingredients>
    <ingredient>
      <ingredient_name>garlic</ingredient_name>
      <quantity>1</quantity>
      <preparation>split</preparation>
    </ingredient>
    <ingredient>
      <ingredient_name>avocados</ingredient_name>
      <quantity>2</quantity>
      <preparation>peeled and sliced</preparation>
    </ingredient>
    <ingredient>
      <ingredient_name>small onion</ingredient_name>
      <quantity>1</quantity>
      <preparation>finely diced</preparation>
    </ingredient>
    <ingredient>
      <ingredient_name>small tomato</ingredient_name>
      <quantity>1 clove</quantity>
      <preparation/>
    </ingredient>
    <ingredient>
      <ingredient_name>diced green chiles (poblanos)</ingredient_name>
      <quantity>2-4 tsp</quantity>
      <preparation/>
    </ingredient>
    <ingredient>
      <ingredient_name>salt</ingredient_name>
      <quantity>1 tsp</quantity>
      <preparation/>
    </ingredient>
    <ingredient>
      <ingredient_name>mayonnaise</ingredient_name>
      <quantity>1/2 cup</quantity>
      <preparation/>
    </ingredient>
  </ingredients>
